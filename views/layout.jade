doctype html
html.wf-loading
  head
    title= title

    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(http-equiv="Content-Language", content="en-us")
    meta(name="viewport", content="initial-scale=1.0, minimum-scale=1.0, width=device-width")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(charset="utf-8")

    meta(name="apple-mobile-web-app-capable" content="no")

    block meta-page
      meta(name="description" content="Site description here")

    //- Twitter meta tags (static)
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:site" content="@AxiomZenTeam")

    //- Twitter meta tags (dynamic)
    block meta-twitter
      meta(name="twitter:title" content="init() frontend")
      meta(name="twitter:description" content="Site description here")
      meta(name="twitter:image", content="https://www.axiomzen.co/images/az-logo-250.png")
      meta(name="twitter:url", content="https://www.axiomzen.co")

    //- Open Graph meta tags
    meta(property="og:type" content="website")
    meta(property="og:site_name" content="init() frontend")

    block meta-og
      meta(property="og:title" content="init() frontend - Home")
      meta(property="og:description" content="Site description here")
      meta(property="og:image", content="https://www.axiomzen.co/images/az-logo-250.png")
      meta(property="og:url", content="https://wwww.axiomzen.co")

    link(rel="shortcut icon" href="/img/icons/favicon.ico")
    link(rel="apple-touch-icon" href="/img/icons/az-logo-80.png")
    link(rel="apple-touch-icon" sizes="120x120" href="/img/icons/az-logo-160.png")

    //- Google + publisher
    //- link(href="https://plus.google.com/xxxx" rel="publisher")

    //- build:css /css/main.css
    link(rel="stylesheet", href="/css/main.css")
    //- endbuild

  body
    main
      block page-content

    //- build:js /scripts/app.js
    script(src="/bower_components/jquery/dist/jquery.js")
    script(src="/bower_components/fastclick/lib/fastclick.js")
    script(src="/bower_components/viewport-units-buggyfill/viewport-units-buggyfill.js")
    script(src="/bower_components/webfontloader/webfontloader.js")
    //- endbuild

    script.
      window.viewportUnitsBuggyfill.init();
      window.FastClick.attach(document.body);
      window.WebFont.load({
        google: {
          families: ['Open Sans', 'Merriweather'],
          timeout: 2000
        }
      });

    //- Google Analytics
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'xxxxx', 'auto');
      ga('send', 'pageview');

    block extra-scripts
